<!-- views/partial/session.data.ejs -->
<h1><%=session.exercise.name%></h1>
<h3><%=session.exercise.description%></h3>
<span id="id" hidden><%=session.id%></span>
<table id="survey">
  <tr>
    <th></th>
    <%for(var r=0; r < session.exercise.data.responses.length; r++){ %>
      <th><%=session.exercise.data.responses[r].response%></th>
      <%}%>
  </tr>


<% for(var q=0; q < session.exercise.data.questions.length; q++) { %>
   <tr>
     <td class="question"><%=session.exercise.data.questions[q] %></td>
     <%for(var r=0; r < session.exercise.data.responses.length; r++){ %>
       <td><input type="radio" name="<%=q%>" checked value="<%=session.exercise.data.responses[r].value%>"></td>
     <%}%>
   </tr>
<% } %>


<script>
function submit(){
  var result = score();
  if(result){
    $.ajax({
        type: 'POST',
        url: '/activities/survey/submit',
        data: {
          surveyId: "<%=session.id%>",
          responses: result.responses,
          score : result.score
        },
				dataType: 'application/json',
        success: function (response) {
            console.log('Survey complete ' + JSON.stringify(response));
        }
    });
  }else{
    alert("Please complete the assessment");
  }
}

function score(){
  var score = Number(0);
  var response;
  var responses = [];
  $('#survey tr').each(function(index, element){
      response = $('input[name='+index+']:checked').val();
      if(response){
        responses[index] = response;
        score+=Number(response);
      }else{
        return false;
      };
  });
  return {score : score, responses : responses};
}

</script>
